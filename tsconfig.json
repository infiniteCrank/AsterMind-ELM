{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        //"module": "esnext",
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "lib": [
            "DOM",
            "ESNext"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}